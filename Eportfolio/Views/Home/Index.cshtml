@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <header>
        <h1>Welcome to My ePortfolio!</h1>
        <p>Here you can find my latest projects, achievements, and experiences. Feel free to browse through and get to know me better.</p>
    </header>

    <div class="container">
        <div class="box">
            <p>Here you can check my latest thoughts, news, and get to know what I've been doing:</p>
            <img src="~/css/images/blog.png" alt="Description of the image">
            <div>
                <a asp-controller="Posts" asp-action="Index" class="btn btn-primary btn-blue">Visit Blog</a>
            </div>
        </div>

        <div class="box">
            <p>Here you can check out the music I've made:</p>
            <img src="~/css/images/music.png" alt="Description of the image">
            <div>
                <a asp-controller="MyMusic" asp-action="Index" class="btn btn-primary btn-green">Check Out My Music</a>
            </div>
        </div>

        <div class="box">
            <p>You can contact me here:</p>
            <img src="~/css/images/contact.png" alt="Description of the image">
            <div>
                <a asp-controller="Contacts" asp-action="Create" class="btn btn-primary btn-yellow">Contact</a>
            </div>
        </div>
    </div>
</div>









